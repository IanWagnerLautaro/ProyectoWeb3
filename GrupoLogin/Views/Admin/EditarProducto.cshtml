@model GrupoLogin.DATA.Model.Producto

@{
    ViewData["Title"] = "EditarProducto";
}
<link rel="stylesheet" href="~/css/Admin/FormRegistro.css" />

<h1>EditarProducto</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="row d-flex justify-content-center">

    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditarProducto" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                <div class="input-field">
                    <input asp-for="Precio"/>
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                <div class="input-field">
                    <input asp-for="Nombre"/>
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                <div class="input-field">
                    <input asp-for="Descripcion" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="cantidad" class="control-label"></label>
                <div class="input-field">
                    <input asp-for="cantidad" />
                </div>
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
