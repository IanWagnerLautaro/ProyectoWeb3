@model GrupoLogin.DATA.Model.Producto

@{
    ViewData["Title"] = "View";
}
<link rel="stylesheet" href="~/css/Admin/FormRegistro.css" />
<h4>Registra un producto</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="RegistrarProducto" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <div class="input-field">
                    <input asp-for="Nombre" placeholder="Nombre" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <div class="input-field">
                    <input asp-for="Precio" placeholder="Precio">
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-field">
                    <input asp-for="Descripcion" placeholder="Descripcion" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-field">
                    <input asp-for="cantidad" placeholder="Cantidad"/>
                </div>
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
