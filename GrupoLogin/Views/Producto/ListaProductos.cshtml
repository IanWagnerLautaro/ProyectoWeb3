@{
@using GrupoLogin.DATA.Model.Enums;
@model GrupoLogin.WEB.Models.ListaProductosViewModel

}
<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <h1>Lista de productos</h1>
        @if (Model.Rol == (int)Rol.Admin)
        {
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("RegistrarProducto", "Admin")'">Agregar Producto</button>
        }
        
    </div>


    <table class="table table-bordered">
        <thead style="background:#f0f0f0">
            <tr>
                @if (Model.Rol == (int)Rol.Admin)
                {
                    <th scope="col">Id</th>
                }
                
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>

                @if (Model.Rol == (int)Rol.Admin)
                {
                    <th scope="col"></th>
                }
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Productos)
            {
                <tr>
                    @if (Model.Rol == (int)Rol.Admin)
                    {
                        <td>@item.Id</td>
                    }
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Precio</td>
                    <td>@item.cantidad</td>
                    @if (Model.Rol == (int)Rol.Admin)
                    {
                        <td>
                            <div class="d-flex justify-content-center">
                                <button type="button" onclick="location.href='@Url.Action("EditarProducto", "Admin", new { id = item.Id })'" data-parametro="@item.Id" data-bs-toggle="tooltip" class="btn btn-outline-secondary btn-sm edit" title="" style=" margin-bottom: 6px;border:none"><i class="fas fa-pencil-alt"></i></button>
                                <button type="button" onclick="location.href='@Url.Action("EliminarProducto", "Admin", new { id = item.Id })'" class="btn btn-outline-danger btn-sm edit" title="" style=" margin-bottom: 6px;border:none"><i class="fas fa-trash-alt"></i></button>
                            </div>
                        </td>
                        
                    }

                </tr>
            }
           
        </tbody>
    </table>
</div>

<script>


</script>

