@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/Home/index.css" />

@*@{
    Layout = "_LayoutHome";

}*@

<div class="container mt-5">
   <div class="text-center">
        <h1> Grupo Login </h1>
   </div>    

   <div class="d-flex justify-content-center my-5">
        <button type="button" onclick="location.href='@Url.Action("LoginRegister", "Usuario")'" class="btn solid">Ir al login </button>
   </div>

</div>

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <span class="navbar-text text-dark">Hello @User.Identity.Name!</span>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignOut">Sign out</a>
        @*<a class="nav-link text-dark" href="/signout-oidc">Sign out</a>*@
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignIn">Sign in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignInGoogle">Sign in Google</a>
    </li>
}